@model IEnumerable<DangTrungHieu.SachOnline.Models.ReportInfo>
@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Shared/LayoutSachOnline.cshtml";
}
<style>
    .table tr td {
        border: 1px solid black;
    }
</style>
<h2>THỐNG KÊ SỐ ĐẦU SÁCH THEO CHỦ ĐỀ</h2>
<table class="table">
    <tr style="background-color:burlywood; font-weight:bold">
        <td>Mã CD</td>
        <td>Tên CD</td>
        <td>Số Đầu Sách</td>
        <td>Tổng số sách</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Count</td>
            <td>@item.Sum</td>
        </tr>
    }
</table>