@model DangTrungHieu.SachOnline.Models.KHACHHANG

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LayoutSachOnline.cshtml";
}
<style type="text/css">
    tr {
        height: 50px;
        margin: 10px;
    }

    input {
        padding: 7px;
        border-radius: 30px;
        border: none;
        background: #dedede;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("Register", "User"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên: </td>
            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
        </tr>
        <tr>
            <td>Tên tài khoản: </td>
            <td>@Html.TextBox("TaiKhoan") @ViewData["err2"]</td>
        </tr>
        <tr>
            <td>Mật khẩu: </td>
            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại: </td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Email: </td>
            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr>
            <td>Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /></td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="Đăng ký" class="btn btn-danger" />
            </td>
            <td><input type="reset" value="Xóa thông Tin" class="btn btn-warning" /></td>
        </tr>
    }
</table>
