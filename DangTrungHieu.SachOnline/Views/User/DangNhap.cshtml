
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/LayoutSachOnline.cshtml";
}
@section Slider{
    @Html.Action("Slider", "SachOnline")
}
<style type="text/css">
    td {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<h2 style="text-align:center;">ĐĂNG NHẬP</h2>
<table align="center">
    
    @using (Html.BeginForm())
    {
        if (Request.Cookies["TenDN"] != null && Request.Cookies["MatKhau"] != null)
        {
            <tr>
                <td>Tên Tài khoản: </td>
                <td>
                    @Html.TextBox("TenDN", Request.Cookies["TenDN"].Value)
                    @ViewData["Err1"]
                </td>
            </tr>
            <tr>
                <td>Mật Khẩu: </td>
                <td>
                    @Html.Password("MatKhau", Request.Cookies["MatKhau"].Value)
                    @ViewData["Err2"]
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>Tên Đăng Nhập: </td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Err1"]
                </td>
            </tr>
            <tr>
                <td>Mật Khẩu: </td>
                <td>
                    @Html.Password("MatKhau")
                    @ViewData["Err2"]
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td>
                @Html.CheckBox("remember")<span style="font-style: italic"> Nhớ thông tin đăng nhập</span>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>
