        <h4>TRANG TIN</h4>
        <hr />
        @Html.ValidationSummary(true,"", new { @class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.TenTrang, htmlAttributes: new { @class = "control-lable col-md-2"})
