@model IEnumerable<DangTrungHieu.SachOnline.Models.CHUDE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
}

<h2>Quản lý chủ đề sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenChuDe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            <a href="@Url.Action("Sửa", new { id = item.MaCD })" class="btn btn-warning" role="button">Sửa</a>
            <a href="@Url.Action("Chi Tiết", new { id = item.MaCD})" class="btn btn-primary" role="button">Chi tiết</a>
            <a href="@Url.Action("Xóa", new { id = item.MaCD})" class="btn btn-danger" role="button">Xóa</a>
        </td>
    </tr>
}
</table>
